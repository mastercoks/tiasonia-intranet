{
  "private": true,
  "name": "@intranet/api",
  "version": "1.0.0",
  "license": "SEE LICENSE IN ../../../LICENSE",
  "main": "./src/shared/infra/http/server.ts",
  "scripts": {
    "dev": "ts-node-dev --inspect --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/shared/infra/http/server.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist && copyfiles -u 1 src/**/*.html dist",
    "prod": "yarn build && node dist/shared/infra/http/server.js",
    "typeorm": "ts-node-dev -r tsconfig-paths/register node_modules/typeorm/cli.js",
    "lint": "eslint src --ext ts",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/node": "^5.27.2",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "celebrate": "^13.0.3",
    "class-transformer": "^0.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "exceljs": "^4.2.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.12",
    "moment": "^2.29.1",
    "mssql": "^6.2.3",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "qs": "^6.9.6",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.3.0",
    "typeorm": "^0.2.28",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/knex": "^0.16.1",
    "@types/mssql": "^6.0.5",
    "@types/multer": "^1.4.4",
    "@types/uuid": "^8.3.1",
    "copyfiles": "^2.4.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9"
  }
}
